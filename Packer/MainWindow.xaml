<Window x:Class="Packer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Packer"
        mc:Ignorable="d"
        Title="Packer" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button Name="BrowseButton" Content="Выбрать папку для хеширования" Click="BrowseButton_Click" Margin="10"/>
            <TextBox Name="DirectoryPathTextBox" Margin="10" IsReadOnly="True"/>

            <Button Name="BrowseOutputButton" Content="Выбрать папку для архивов" Click="BrowseOutputButton_Click" Margin="10"/>
            <TextBox Name="OutputDirectoryPathTextBox" Margin="10" IsReadOnly="True"/>

            <Button Name="StartButton" Content="Начать хеширование и архивирование" Click="StartButton_Click" Margin="10"/>
            <TextBox Name="OutputTextBox" Margin="10" Height="150" VerticalScrollBarVisibility="Auto" IsReadOnly="True" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
